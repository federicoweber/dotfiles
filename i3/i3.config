# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $editor termite

# Colors
set $red         #c23127
set $yellow      #edb443
set $cyan        #33859E
set $white       #99d1ce
set $black       #0c1014
set $blue        #195466
set $lightblack  #11151c
set $green       #2aa889

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango: Source Code Pro 8

# Some style
for_window [class="^.*"] border pixel 1
new_window 1pixel
gaps inner 12
gaps outer 12
# smart_gaps on
smart_borders on

# CLASS                 BORDER        BACKGR.      TEXT         INDICATOR       CHILD_BORDER
client.focused          $black        $black       $green       $cyan           $green
client.focused_inactive $black        $black       $green       $cyan           $black
client.unfocused        $black        $black       $lightblack  $black          $black
client.urgent           $black        $lightblack  $yellow      $yellow         $yellow
client.background       $black
#
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  #i3bar_command i3bar -t
  status_command i3status
  tray_output none
  tray_padding 6
  separator_symbol " "
  position top
  colors {
        statusline         $cyan
        background         $black
        separator          $lightblack

#                          BORDER       BACKGROUND   TEXT
        focused_workspace  $black  $black  $green
        inactive_workspace $black  $black  $blue
        active_workspace   $black  $black  $cyan
        urgent_workspace   $black  $black  $yellow
        binding_mode       $black  $black  $red
    }
}

# Workspace names
set $ws1  "  "
set $ws2  "  "
set $ws3  "  "
set $ws4  "  "
set $ws5  "  "
set $ws6  "  "
set $ws7  "  "
set $ws8  "  "
set $ws9  "  "
set $ws10 "  "


# Assignment to Workspace
assign [class="(?i)franz"] $ws3
assign [class="(?i)slack"] $ws3
# assign [class="(?i)zoom"] $ws4
# assign [class="(?i)spotify"] $ws5
# need this cause of a bug with Spotify
for_window [class="(?i)spotify"] move to workspace $ws5
assign [class="(?i)steam"] $ws6
assign [class="(?i)hiro"] $ws6
assign [class="(?i)gimp"] $ws7
assign [class="(?i)allegro"] $ws7
assign [class="(?i)freecAD"] $ws8
assign [class="(?i)calibre"] $ws9
assign [class="(?i)deluge"] $ws10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Toggle monitor output
bindsym $mod+m exec --no-startup-id ~/bin/toggle_monitor.sh && reload

# lock the screen
bindsym $mod+o exec --no-startup-id ~/bin/lock.sh && systemctl suspend
bindsym $mod+Shift+o exec --no-startup-id ~/bin/lock.sh && systemctl hibernate

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+x kill

# Rofi
bindsym $mod+d exec rofi -show run -matching fuzzy -lines 7 -width 50 -padding 100 -font "Source Code Pro 20" -separator-style "none" -config "/$HOME/dotfiles/rofi/config"
bindsym $mod+Tab exec rofi -show window -matching fuzzy -lines 7 -width 50 -padding 100 -font "Source Code Pro 20" -separator-style "none" -config "/$HOME/dotfiles/rofi/config"

# start chromium
bindsym $mod+c exec chromium --profile-directory="Default" --app-shell-host-window-size="1146x1080"
bindsym $mod+b exec chromium --profile-directory="Profile 1" --app-shell-host-window-size="1146x1080"

# move between workspaces
bindsym $mod+p workspace prev
bindsym $mod+n workspace next
bindsym $mod+Shift+p move container to workspace prev workspace prev
bindsym $mod+Shift+n move container to workspace next workspace next

# Make the currently focused window a scratchpad
bindsym $mod+Shift+s move scratchpad
# Show the first scratchpad window
bindsym $mod+s scratchpad show

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left 32px
bindsym $mod+Shift+j move down 32px
bindsym $mod+Shift+k move up 32px
bindsym $mod+Shift+l move right 32px
bindsym $mod+Shift+i move absolute position center

# split in horizontal orientation
bindsym $mod+Mod1+v split h

# split in vertical orientation
bindsym $mod+Mod1+s split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle, move absolute position center

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1 workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2 workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3 workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4 workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5 workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6 workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7 workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8 workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9 workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10 workspace $ws10

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Screen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Capture a selection of the screen
bindsym --release Print exec --no-startup-id maim -s ~/Pictures/Screens/$(date +%Y%m%d_%H%M%S)-screenshot.png
# Capture the wall screen
bindsym --release Shift+Print exec --no-startup-id maim ~/Pictures/Screens/$(date +%Y%m%d_%H%M%S)-screenshot.png

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Network Manager Applet
# exec --no-startup-id nm-applet

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 12 px or 12 ppt
        bindsym j resize grow height 12 px or 12 ppt
        bindsym k resize shrink height 12 px or 12 ppt
        bindsym l resize grow width 12 px or 12 ppt

        # fixed sizes
        bindsym f floating enable, resize set 3200 px 1800 px, move absolute position center
        bindsym Shift+f floating enable, resize set 3440 px 1440 px, move absolute position center
        bindsym s floating enable, resize set 1720 px 720 px, move absolute position center

        # back to normal: Enter or Escape
        bindsym Return move absolute position center, mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Startup apps
exec --no-startup-id sh ~/.fehbg
exec --no-startup-id compton -b
exec --no-startup-id dropbox
exec --no-startup-id redshift-gtk
exec --no-startup-id blueman-applet
exec --no-startup-id ~/bin/toggle_monitor.sh
